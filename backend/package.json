{
	"name": "backend",
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"start": "bun run src/index.ts",
		"start:prod": "bun run setup:prisma && bun run src/index.ts",
		"start:cron": "bun run src/jobs/cronJob.ts",
		"prepare": "husky",
		"check": "biome check ./src",
		"check:fix": "biome check --write ./src",
		"setup:prisma": "bunx prisma generate --schema=./src/prisma/schema.prisma && bunx prisma migrate deploy --schema=./src/prisma/schema.prisma",
		"postinstall": "bunx prisma generate --schema=./src/prisma/schema.prisma",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"type-check": "bunx tsc --noEmit"
	},
	"dependencies": {
		"@elysiajs/cron": "^1.2.0",
		"@huggingface/inference": "^2.8.1",
		"@langchain/core": "^0.3.66",
		"@langchain/openai": "^0.6.3",
		"@langchain/pinecone": "^0.2.0",
		"@pinecone-database/pinecone": "^5.1.2",
		"@prisma/client": "5.9.1",
		"@supabase/supabase-js": "^2.47.10",
		"@types/fs-extra": "^11.0.4",
		"axios": "^1.7.9",
		"axios-https-proxy-fix": "^0.17.1",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^2.4.3",
		"bunyan": "^1.8.15",
		"cheerio": "^1.1.2",
		"convex": "^1.17.4",
		"dotenv": "^17.2.1",
		"fs-extra": "^11.2.0",
		"hono": "^4.6.16",
		"jsonwebtoken": "^9.0.2",
		"langchain": "0.0.180",
		"neo4j-driver": "^5.28.1",
		"node-fetch": "^3.3.2",
		"nodemailer": "^6.9.16",
		"ollama": "^0.5.11",
		"openai": "^4.77.0",
		"prisma": "5.9.1",
		"puppeteer": "^24.23.0",
		"puppeteer-core": "^24.23.0",
		"simple-git": "^3.27.0",
		"stripe": "^17.6.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bcrypt": "^5.0.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/bun": "latest",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/nodemailer": "^6.4.17",
		"husky": "^9.1.7"
	}
}